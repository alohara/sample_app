<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
	<%= f.check_box :visible %>
	<%= f.label :visible %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
