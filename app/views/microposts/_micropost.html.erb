<li>
  <span class="content">
    <%= wrap(micropost.content) %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	<%= micropost.zipcode %>
	<%= micropost.category %>
	<%= micropost.latitude %>
	<%= micropost.longitude %>
	<%= micropost.content_ip %>
    <% if current_user?(micropost.user) %>
      <div class="checkbox"> <input type="checkbox"><b>HardCode Visible</b>
	    <%= check_box_tag :visible, 1, micropost.visible ? true : false, disabled: true %>
        <%= link_to "delete", micropost, method: :delete,
		   						   confirm: "You sure, Yo?",
								   title: micropost.content %>
	  </div>
  </span>
    <% end %>
</li>